{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"types": [
			"vite/client",
			"vite-plugin-svgr/client"
		],
		"target": "es2020",
		"module": "commonjs",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"noErrorTruncation": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"noImplicitAny": false
	},
	"include": [
		"src",
		"./global.d.ts"
	]
}