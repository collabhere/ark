{
	"name": "ark",
	"version": "0.1.0",
	"private": true,
	"homepage": "./",
	"main": "./build/renderer/main.js",
	"scripts": {
		"start": "BROWSER=none ARK_ENTRY_URL=http://localhost:3000 concurrently \"vite\" \"sleep 2 && electron .\"",
		"build:electron": "tsc --build electron/tsconfig.json -w",
		"build:electron:prod": "tsc --build electron/tsconfig.json",
		"build:react:prod": "vite build",
		"serve": "vite preview",
		"build": "rimraf build && npm run build:react:prod && npm run build:electron:prod",
		"pack": "electron-builder --dir",
		"dist:macos": "electron-builder --macos",
		"dist:linux": "electron-builder --linux",
		"dist:windows": "electron-builder --windows"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"build": {
		"productName": "Ark",
		"appId": "dev.wheredevs.Ark",
		"extends": null,
		"files": [
			"./build/**/*",
			{
				"from": "./public/mongoshell.d.ts",
				"to": "build/mongoshell.d.ts"
			}
		],
		"directories": {
			"output": "release/",
			"app": "./"
		},
		"mac": {
			"target": [
				"dmg"
			],
			"type": "distribution",
			"hardenedRuntime": true,
			"gatekeeperAssess": false
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Development"
		},
		"extraResources": [
			"./node_modules/**/*"
		],
		"publish": {
			"provider": "github",
			"owner": "wheredevsdev",
			"repo": "ark"
		}
	},
	"devDependencies": {
		"electron": "^13.1.7",
		"electron-builder": "^22.11.7",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"less": "3.0.0",
		"less-vars-to-js": "^1.3.0",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"@vitejs/plugin-react-refresh": "^1.3.1",
		"vite": "^2.3.2",
		"vite-plugin-eslint": "^1.3.0",
		"vite-plugin-svgr": "^0.3.0"
	},
	"dependencies": {
		"@ant-design/icons": "^4.6.2",
		"@monaco-editor/react": "^4.2.1",
		"@mongosh/async-rewriter2": "^1.0.5",
		"@mongosh/service-provider-server": "^1.0.5",
		"@mongosh/shell-api": "^1.0.5",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^11.2.7",
		"@testing-library/user-event": "^12.8.3",
		"@types/defaults": "^1.0.3",
		"@types/electron-json-storage": "^4.5.0",
		"@types/jest": "^26.0.24",
		"@types/node": "^12.20.16",
		"@types/react": "^17.0.14",
		"@types/react-dom": "^17.0.9",
		"ansi-to-html": "^0.7.1",
		"antd": "^4.16.8",
		"concurrently": "^6.2.0",
		"defaults": "^1.0.3",
		"electron-json-storage": "^4.5.0",
		"monaco-editor": "^0.26.1",
		"mongodb": "^4.0.1",
		"nanoid": "^3.1.23",
		"prettier": "^2.3.2",
		"re-resizable": "^6.9.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-icons": "^4.2.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.5"
	}
}
